# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           org.multics.baueran.frep.backend.controllers.HomeController.index
GET     /get/:id               		org.multics.baueran.frep.backend.controllers.HomeController.get(id: Long)
GET     /insert/:id            		org.multics.baueran.frep.backend.controllers.HomeController.insert(id: Long)
GET     /stuff/:id          		org.multics.baueran.frep.backend.controllers.HomeController.show(id: Long)
POST   	/myPostRequest				org.multics.baueran.frep.backend.controllers.Post.myPostRequest
GET		/lookup						org.multics.baueran.frep.backend.controllers.HomeController.repertorise(repertory: String, symptom: String)
GET     /availableReps              org.multics.baueran.frep.backend.controllers.HomeController.availableReps

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
